<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabezasS2.MainPage">

    <StackLayout>
        <Label/>

        <Image Source="https://cdn-icons-png.flaticon.com/512/1177/1177568.png" WidthRequest="110" HeightRequest="110" />
        <Label/>
        <Image Source="https://cdn-icons-png.flaticon.com/128/747/747474.png" WidthRequest= "35" HeightRequest="35" />
        <Label Text="Iniciar Sesión" FontSize="20" TextColor="CornflowerBlue" HorizontalOptions="Center"  />
        <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" />
        <Entry x:Name="txtClave" Placeholder="Ingrese Contraseña" IsPassword="True"/>
        <Button x:Name="btnLogin" Text="Ingresar" Clicked="btnLogin_Clicked" BackgroundColor="CornflowerBlue" TextColor="White" />
    </StackLayout>

</ContentPage>
